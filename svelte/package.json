{
  "name": "@dschulmeis/template-esbuild-ts-less",
  "version": "1.0.0",
  "description": "esbuild + TypeScript + LESS | Template",
  "author": "Dennis Schulmeister-Zimolong",
  "type": "module",
  "scripts": {
    "clean": "node bin/clean.js",
    "build": "npm run clean && node bin/build-static.mjs && node bin/esbuild-bundle.js && tsc",
    "check": "tsc && svelte-check --tsconfig tsconfig.json --fail-on-warnings",
    "start": "conc -r \"tsc -w\" \"node bin/esbuild-serve.js\""
  },
  "config": {
    "src_dir": "src",
    "static_dir": "static",
    "build_dir": "build"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.4",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.2",
    "esbuild-svelte": "^0.8.2",
    "shelljs": "^0.8.5",
    "svelte": "^4.2.19",
    "svelte-check": "^4.0.2",
    "svelte-preprocess": "^6.0.2",
    "typescript": "^5.4.5"
  }
}
